rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /rides/{rideId} {
      allow read: if true
      allow write: if request.auth.uid != null
    }
    
    match /dates/{dateId} {
      allow read: if true
      allow write: if request.auth.uid != null
    }

    match /tracks/{trackId} {
      allow read: if true
      allow write: if request.auth.uid != null
    }

    match /photos/{photoId} {
      allow read: if true
      allow write: if request.auth.uid != null
    }

    match /users/{userId} {
      allow read: if true
      allow write: if request.auth != null && request.auth.uid == userId
    }

  }
}